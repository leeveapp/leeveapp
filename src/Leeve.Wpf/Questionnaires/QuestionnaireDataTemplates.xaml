<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="clr-namespace:Leeve.Application.Questionnaires;assembly=Leeve.Application"
    xmlns:view="clr-namespace:Leeve.Wpf.Questionnaires">
    <DataTemplate
        DataType="{x:Type viewModel:AddQuestionnaireViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:QuestionnaireView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:EditQuestionnaireViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:QuestionnaireView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:QuestionnairesSelectionViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:QuestionnairesSelectionView />
        </ContentControl>
    </DataTemplate>
</ResourceDictionary>