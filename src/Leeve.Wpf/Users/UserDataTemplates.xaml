<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="clr-namespace:Leeve.Application.Users;assembly=Leeve.Application"
    xmlns:view="clr-namespace:Leeve.Wpf.Users">
    <DataTemplate
        DataType="{x:Type viewModel:TeacherLoginPageViewModel}">
        <ContentControl
            Style="{StaticResource ExpandIn}">
            <view:TeacherLoginPageView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:TeacherMainPageViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:TeacherMainPageView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:TeacherHomePageViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:TeacherHomePageView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:TeacherListViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:TeacherListView />
        </ContentControl>
    </DataTemplate>
</ResourceDictionary>