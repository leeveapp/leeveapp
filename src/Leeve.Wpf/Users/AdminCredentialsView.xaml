<UserControl
    x:Class="Leeve.Wpf.Users.AdminCredentialsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:attached="http://debitexpress.com/winfx/xaml/attached-properties"
    xmlns:viewModel="clr-namespace:Leeve.Application.Users;assembly=Leeve.Application"
    xmlns:dialogs="http://debitexpress.com/winfx/xaml/dialogs"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:AdminCredentialsViewModel}">
    <UserControl.InputBindings>
        <KeyBinding
            Key="Enter"
            Command="{Binding OkCommand}" />
        <KeyBinding
            Key="Escape"
            Command="{Binding CancelCommand}" />
    </UserControl.InputBindings>
    <Grid>
        <dialogs:DraggableControl Height="32" VerticalAlignment="Top" />
        <Grid
            Width="300"
            Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock
                    Margin="0,0,0,40"
                    FontSize="16"
                    FontWeight="Medium"
                    Text="Update Admin Credentials" />
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon
                            Kind="User"
                            Margin="0,0,5,5"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=CurrentUserBox, Path=BorderBrush}" />
                        <TextBox
                            x:Name="CurrentUserBox"
                            attached:UIElement.FocusOnLoad="True"
                            materialDesign:HintAssist.Hint="Current Username "
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding CurrentUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                    </DockPanel>
                    <DockPanel Margin="0,0,0,20">
                        <materialDesign:PackIcon
                            Kind="Key"
                            Margin="0,0,5,5"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=CurrentPasswordBox, Path=BorderBrush}" />
                        <PasswordBox
                            x:Name="CurrentPasswordBox"
                            materialDesign:HintAssist.Hint="Current Password"
                            attached:PasswordBoxElement.BindPassword="True"
                            attached:PasswordBoxElement.BoundPassword="{Binding CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                    </DockPanel>
                    <DockPanel Margin="0,10">
                        <materialDesign:PackIcon
                            Kind="UserStar"
                            Margin="0,0,5,5"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=UserBox, Path=BorderBrush}" />
                        <TextBox
                            x:Name="UserBox"
                            materialDesign:HintAssist.Hint="New Username "
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding NewUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                    </DockPanel>
                    <DockPanel>
                        <materialDesign:PackIcon
                            Kind="PrimaryKey"
                            Margin="0,0,5,5"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=PasswordBox, Path=BorderBrush}" />
                        <PasswordBox
                            x:Name="PasswordBox"
                            materialDesign:HintAssist.Hint="New Password"
                            attached:PasswordBoxElement.BindPassword="True"
                            attached:PasswordBoxElement.BoundPassword="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                    </DockPanel>
                    <DockPanel Margin="0,0,0,50">
                        <materialDesign:PackIcon
                            Kind="KeyLink"
                            Margin="0,0,5,5"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=ConfirmPasswordBox, Path=BorderBrush}" />
                        <PasswordBox
                            x:Name="ConfirmPasswordBox"
                            materialDesign:HintAssist.Hint="Confirm Password"
                            attached:PasswordBoxElement.BindPassword="True"
                            attached:PasswordBoxElement.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right">
                <Button
                    Margin="0,0,5,0"
                    Width="100"
                    Content="OK"
                    Command="{Binding OkCommand}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                <Button
                    Width="100"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>
        </Grid>
        <Button
            Width="30"
            Margin="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            FocusVisualStyle="{x:Null}"
            Style="{StaticResource MaterialDesignToolButton}"
            Command="{Binding CancelCommand}">
            <materialDesign:PackIcon
                Kind="Close"
                Foreground="{DynamicResource MaterialDesignBody}" />
        </Button>
    </Grid>
</UserControl>