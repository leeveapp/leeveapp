<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="clr-namespace:Leeve.Application.Evaluations;assembly=Leeve.Application"
    xmlns:view="clr-namespace:Leeve.Wpf.Evaluations">
    <DataTemplate
        DataType="{x:Type viewModel:EvaluationViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:EvaluationView />
        </ContentControl>
    </DataTemplate>
    <DataTemplate
        DataType="{x:Type viewModel:EvaluationSelectionViewModel}">
        <ContentControl
            Style="{StaticResource FadeIn}">
            <view:EvaluationSelectionView />
        </ContentControl>
    </DataTemplate>
</ResourceDictionary>